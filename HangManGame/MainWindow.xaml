<Window x:Class="HangManGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangManGame"
        mc:Ignorable="d"
        Title="HangMan.exe" Height="450" Width="800">
    <Grid>
        <Image Source="Images/board.jpg" Margin="10"></Image>
        <Button x:Name="NewGame" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" FontSize="38" FontFamily="Face Your Fears" Margin="286,86,292,275" Width="214" Foreground="#FFD8D8D8" Height="58" Click="NewGame_Click">New Game</Button>
        <Button x:Name="Exit" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" FontSize="28" FontFamily="Face Your Fears" Margin="286,295,292,66" Width="214" Foreground="#FFD8D8D8" Height="58" Click="Exit_Click">Exit</Button>
    </Grid>
</Window>
